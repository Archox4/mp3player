    <Style TargetType="{x:Type GridViewColumnHeader}" x:Key="listViewHeader">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                    <Grid Background="{TemplateBinding Background}">


                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
